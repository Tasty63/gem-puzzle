{
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
        "eol-last": ["error", "never"],
        "indent": [2, 4, { "SwitchCase": 1 }],
        "no-param-reassign": 0,
        "linebreak-style": ["error", "windows"],
        "prefer-destructuring": ["error", {
            "AssignmentExpression": {
                "array": false,
                "object": false
            }
        }],
        "operator-linebreak": [2 , "after"],
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-plusplus": 0
    },
     "env": {
        "browser": true,
        "node": true
    }
}